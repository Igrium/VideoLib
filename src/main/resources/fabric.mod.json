{
  "schemaVersion": 1,
  "id": "videolib",
  "version": "${version}",

  "name": "VideoLib",
  "description": "A library enabling video playback in Minecraft",
  "authors": [
    "Igrium"
  ],
  "contact": {
    "homepage": "http://igrium.com/",
    "sources": "https://github.com/Sam54123/VideoLib"
  },

  "license": "MIT",
  "icon": "assets/videolib/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "com.igrium.videolib.server.VideoLibServer"
    ],
    "client": [
      "com.igrium.videolib.VideoLib",
      "com.igrium.videolib.demo.VideoLibDemo"
    ]
  },
  "mixins": [
    "videolib.mixins.json",
    "videolib_server.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17"
  },
  "suggests": {
  }
}
